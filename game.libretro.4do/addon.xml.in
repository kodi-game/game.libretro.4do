<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.4do"
		name="The 3DO Company - 3DO (4DO)"
		version="1.3.2.13"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.3do" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>3DO</platforms>
		<extensions>iso|bin|chd|cue</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>true</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>Unlicensed</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.4do</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<lifecycle type="broken" lang="en_GB">This add-on has been renamed from 4do to Opera.</lifecycle>
		<summary lang="en_GB">4DO</summary>
		<summary lang="es_ES">The 3DO Company - 3DO (4DO)</summary>
		<summary lang="it_IT">The 3DO Company - 3DO (4DO)</summary>
		<summary lang="ru_RU">The 3DO Company - 3DO (4DO)</summary>
		<description lang="en_GB">4DO emulates the 3DO Interactive Multiplayer video game system, often called simply the 3DO.[CR][CR]4DO is based on the FreeDO source code.</description>
		<description lang="es_ES">4DO emula el sistema de videojuegos 3DO Interactive Multiplayer, a menudo llamado simplemente 3DO.[CR][CR]4DO se basa en el código fuente de FreeDO.</description>
		<description lang="it_IT">4DO emula il sistema di videogiochi multiplayer interattivo 3DO, spesso chiamato semplicemente 3DO.[CR][CR]4DO è basato sul codice sorgente FreeDO.</description>
		<lifecyclestate type="broken" lang="en_GB">This add-on has been renamed from 4do to Opera.</lifecyclestate>
		<lifecyclestate type="broken" lang="es_ES">Este add-on ha sido renombrado de 4do a Opera.</lifecyclestate>
	</extension>
</addon>
