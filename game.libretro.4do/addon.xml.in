<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.4do"
		name="3DO (4DO)"
		version="1.3.2"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.3do" version="1.0.0" optional="true"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>3DO</platforms>
		<extensions>iso</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
		<supports_mouse>false</supports_mouse>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">3DO (4DO) 1.3.2.3</summary>
		<description>Port of 4DO/libfreedo to libretro.

Supported files: .iso</description>
		<license>LGPL with additional notes</license>
		<platform>@PLATFORM@</platform>
	</extension>
</addon>